# 環境變量配置文件 - NGINX 代理版本
# 複製此文件為 .env 並修改相應值

# 應用程序配置
APP_NAME=MemoryArk2
APP_VERSION=0.1.0
APP_ENV=development

# 服務器配置 - 後端在 NGINX 代理後監聽內部端口
PORT=8080
HOST=127.0.0.1

# 數據庫配置
DB_PATH=./data/memoryark.db
DB_MAX_CONNECTIONS=10
DB_MAX_IDLE_CONNECTIONS=5

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# 文件上傳配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=500MB

# 日誌配置
LOG_LEVEL=info
LOG_FILE=./logs/memoryark.log

# CORS 配置
CORS_ALLOWED_ORIGINS=http://127.0.0.1:7001,http://localhost:7001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,Cache-Control

# SSL/TLS 配置（生產環境）
# SSL_CERT_FILE=
# SSL_KEY_FILE=

# 外部服務配置
# CLOUDFLARE_API_TOKEN=
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=

# 媒體處理配置
FFMPEG_PATH=/usr/bin/ffmpeg
IMAGE_QUALITY=85
VIDEO_BITRATE=1000k

# 緩存配置
CACHE_TTL=3600
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 安全配置
BCRYPT_COST=12
RATE_LIMIT_REQUESTS_PER_MINUTE=60
SESSION_TIMEOUT=24h

# 開發配置
DEBUG=true
HOT_RELOAD=true
