# 環境變量配置文件
# 複製此文件為 .env 並修改相應值

# 應用程序配置
APP_NAME=MemoryArk2
APP_VERSION=0.1.0
APP_ENV=development

# 服務器配置
PORT=7001
HOST=0.0.0.0

# 數據庫配置
DB_PATH=./data/memoryark.db
DB_MAX_CONNECTIONS=10
DB_MAX_IDLE_CONNECTIONS=5

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# 文件上傳配置
UPLOAD_PATH=./uploads
MAX_UPLOAD_SIZE=100MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp3,wav,mp4,avi,pdf,doc,docx

# Cloudflare Access 配置
CLOUDFLARE_DOMAIN=your-domain.com
CLOUDFLARE_AUD=your-cloudflare-audience-tag
CLOUDFLARE_CERT_URL=https://your-domain.cloudflareaccess.com/cdn-cgi/access/certs

# CORS 配置
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://your-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# 日誌配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# 速率限制配置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# 媒體處理配置
FFMPEG_PATH=/usr/bin/ffmpeg
IMAGE_PROCESSING_QUALITY=85
AUDIO_BITRATE=128k

# 電子郵件配置（可選）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=MemoryArk 2.0 <noreply@your-domain.com>

# 快取配置
CACHE_TTL=1h
CACHE_MAX_SIZE=100MB

# 備份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=30d
BACKUP_PATH=./backups
