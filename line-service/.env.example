# Server Configuration
PORT=3000
NODE_ENV=development

# LINE Bot Configuration
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here
LINE_CHANNEL_ID=your_channel_id_here

# MemoryArk API Configuration
MEMORYARK_API_URL=http://localhost:8081
MEMORYARK_API_TOKEN=your_api_token_here
MEMORYARK_UPLOAD_ENDPOINT=/api/photos/upload
MEMORYARK_MAX_FILE_SIZE=52428800
MEMORYARK_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,image/bmp

# Redis Configuration (for future queue processing)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info