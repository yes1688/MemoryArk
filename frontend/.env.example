# MemoryArk 2.0 Frontend Environment Configuration

# API Base URL - Update this to match your backend server
VITE_API_BASE_URL=http://localhost:3000/api

# Application Title
VITE_APP_TITLE=MemoryArk 2.0

# Environment (development, staging, production)
VITE_APP_ENV=development

# File Upload Configuration
VITE_MAX_FILE_SIZE=100MB
VITE_ALLOWED_FILE_TYPES=image/*,video/*,audio/*,.pdf,.doc,.docx,.txt

# UI Configuration
VITE_ITEMS_PER_PAGE=20
VITE_DEBOUNCE_DELAY=300

# Feature Flags
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_PUBLIC_UPLOADS=false

# Development Configuration
VITE_DEV_PORT=5173
VITE_DEV_HOST=localhost

# Security Configuration (for production)
# VITE_ENABLE_HTTPS=true
# VITE_CSRF_TOKEN_NAME=_token
