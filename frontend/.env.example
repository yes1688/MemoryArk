# 前端環境變量配置
# 複製此文件為 .env 並修改相應值

# API 配置
VITE_API_BASE_URL=http://localhost:7001/api
VITE_APP_TITLE=MemoryArk 2.0
VITE_APP_VERSION=0.1.0

# Cloudflare Access 配置
VITE_CLOUDFLARE_DOMAIN=your-domain.com
VITE_CLOUDFLARE_REDIRECT_URL=https://your-domain.cloudflareaccess.com

# 應用程序配置
VITE_DEFAULT_LANGUAGE=zh-TW
VITE_TIMEZONE=Asia/Taipei

# 文件上傳配置
VITE_MAX_FILE_SIZE=104857600
VITE_CHUNK_SIZE=1048576
VITE_CONCURRENT_UPLOADS=3

# 功能開關
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_PWA=true

# 媒體播放配置
VITE_AUDIO_PRELOAD=metadata
VITE_VIDEO_PRELOAD=metadata
VITE_DEFAULT_VOLUME=0.8

# 分頁配置
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# 快取配置
VITE_CACHE_VERSION=1
VITE_CACHE_TTL=300000

# 開發工具
VITE_ENABLE_MOCK=false
VITE_ENABLE_DEVTOOLS=true
