# MemoryArk 2.0 環境配置範例
# 複製此檔案為 .env 並修改配置值

# ========================================
# 基本應用配置
# ========================================
APP_NAME=memoryark
APP_VERSION=2.0.1
ENVIRONMENT=production

# ========================================
# 管理員配置
# ========================================
ROOT_ADMIN_EMAIL=94work.net@gmail.com
ROOT_ADMIN_NAME=劉程維

# ========================================
# 資料庫配置
# ========================================
DATABASE_PATH=./data/memoryark.db

# ========================================
# 檔案儲存配置
# ========================================
UPLOADS_PATH=./uploads
MAX_UPLOAD_SIZE=100M

# ========================================
# 網路配置
# ========================================
PORT=8081                    # 後端內部端口
FRONTEND_PORT=7001          # 前端對外端口 (nginx)
NGINX_PORT=80               # nginx 容器內部端口

# ========================================
# 安全配置 (⚠️ 生產環境請修改)
# ========================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# ========================================
# Cloudflare Access 配置
# ========================================
CLOUDFLARE_ACCESS_AUD=your-cloudflare-audience-id
CLOUDFLARE_ACCESS_CERT_URL=https://your-team.cloudflareaccess.com/cdn-cgi/access/certs

# ========================================
# 開發模式配置 (僅開發環境)
# ========================================
DEVELOPMENT_MODE=false
DEV_AUTO_LOGIN_EMAIL=94work.net@gmail.com
DEV_BYPASS_AUTH=false
DEV_CORS_ENABLED=false

# ========================================
# 效能配置
# ========================================
MAX_CONCURRENT_UPLOADS=10
MAX_CONCURRENT_EXPORTS=5

# ========================================
# 日誌配置
# ========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ========================================
# 快取配置
# ========================================
ENABLE_CACHE=true
CACHE_TTL=3600

# ========================================
# 備份配置
# ========================================
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30